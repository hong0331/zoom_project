doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Virutal Conference Hall  
        link(rel="stylesheet", href="https://unpkg.com/mvp.css@1.12/mvp.css")
    body 
        header 
            h1 Virtual Conferenc Hall 
        main 
            div#welcome
                form 
                    input(placeholder="Write the room name", required, type="text")
                    button Enter room 
                h4 Open Rooms: 
                ul 
            div#room 
                h3 
                ul 
                    form#nickName
                        input(placeholder="Choose the nick name", required, type="text")
                        button Save
                    form#msg 
                        input(placeholder="Write the message", required, type="text")
                        button Send
        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js")